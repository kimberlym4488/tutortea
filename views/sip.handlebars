<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
  integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
  crossorigin="anonymous"
></script>
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
{{! tooltip functionality  https://jqueryui.com/tooltip/}}
<script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
<script>
  $( function() { $( document ).tooltip(); } );
</script>
<style>
  label { display: inline-block; width: 5em; }
</style>
{{! begin page content }}

<section
  class="container review-list my-5 table-responsive"
  style="border-radius:10px"
>
  <table class="table table-hover">
    <thead class="table-header">

      <tr style="color:white!important; font-weight:bolder; font-size:1.25rem">
        <th scope="col" style="width: 19.66%" href="#" title="Click to sort">My
          Tutors</th>
        <th
          scope="col"
          style="width: 8.33%"
          href="#"
          title="Click to sort"
        >Rating</th>
        <th scope="col" style="width: 60.01%" href="#" title="Click to sort">My
          Reviews</th>
        <th
          scope="col"
          style="width: 12%"
          href="#"
          title="Click to sort"
        >Times</th>
      </tr>

    </thead>

    {{#each myReviews as |myReview|}}
      <tr
        class="clickable-link"
        onclick="window.location='/edit/{{myReview.id}}';"
        style="color:white; cursor:pointer"
        href="#"
        title="Click to update or delete review"
      >
        <td value="{{myReview.tutor_id}}">
          {{myReview.tutor.name}}
        </td>
        <td>
          {{myReview.rating}}
        </td>
        <td>
          {{myReview.review}}
        </td>
        <td>
          {{#if myReview.daytime}}
            Daytime
          {{/if}}
          {{#if myReview.weekends}}
            Weekends
          {{/if}}
          {{#if myReview.nights}}
            Nights
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </table>
  <table class="table table-hover">
    <thead class="table-header">
      <tr style="color:white; font-weight:bolder; font-size:1.25rem">
        <th scope="col" style="width: 19.66%" href="#" title="Click to sort">All
          Tutors</th>
        <th
          scope="col"
          style="width: 8.33%"
          href="#"
          title="Click to sort"
        >Rating</th>
        <th
          scope="col"
          style="width: 60.01%"
          href="#"
          title="Click to sort"
        >Reviews</th>
        <th
          scope="col"
          style="width: 12%"
          href="#"
          title="Click to sort"
        >Availability</th>
      </tr>
    </thead>

    {{#each reviews as |review|}}
      <tr class="edit" style="color:white;">
        <td>
          {{review.tutor.name}}
        </td>
        <td>
          {{review.rating}}
        </td>
        <td>
          {{review.review}}
        </td>
        <td>
          {{#if review.daytime}}
            Daytime
          {{/if}}
          {{#if review.weekends}}
            Weekends
          {{/if}}
          {{#if review.nights}}
            Nights
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </table>
</section>

<script src="/js/sip.js"></script>