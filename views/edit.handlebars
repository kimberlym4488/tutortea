{{!-- Update or delete only your reviews --}}

<link rel="stylesheet" href="/css/starrating.css" />
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css"
/>

<div class="d-flex justify-content-center my-5">
  <form class="submit-review rounded-3 row col-md-8 g-2 m-2 p-2">

    <h2
      class="text-start pt-2 pb-4 border-bottom border-3"
      id="tryingAnything"
      value="{{myReview.tutor.id}}"
      style="border-color: #283130"
    >Spill The Tea</h2>
    <div class="col-md-12">
      <label for="username" class="form-label">Username</label>
      <input
        type="text"
        class="form-control"
        disabled="true"
        value="{{username}}"
      />
    </div>

    <div class="col-md-12">
      <label for="tutorname" class="form-label">Tutor</label>
      <div
        type="text"
        class="form-control tutor-select oddestClass"
        disabled="true"
      >{{myReview.tutor.name}}
      </div>
    </div>

    <div class="col-md-12" style="font-size:1rem">

      <label for="availability" class="form-label">Availability</label>
      <div
        class="d-flex row row-cols-4 justify-space-around align-center justify-content-center p-2"
      >
        <div class="flex-column align-center">
          <label for="daytime">daytime</label>
          <input class="daytime" type="checkbox" name="daytime" />
        </div>
        <div class="flex-column align-center">
          <label for="nights">nights</label>
          <input class="nights" type="checkbox" name="nights" />
        </div>
        <div class="flex-column align-center">
          <label for="weekends">weekends</label>
          <input class="weekends" type="checkbox" name="weekends" />
        </div>
      </div>

    </div>

    <div class="col-md-12">
      <label for="rating" class="form-label">Rating: 1-5 cups!</label>
      <div class="rating-css">
        <div class="star-icon">
          <input type="radio" name="r" id="r1" value="1" checked="true" />
          <label for="r1" class="fa fa-mug-hot"></label>
          <input type="radio" name="r" id="r2" value="2" />
          <label for="r2" class="fa fa-mug-hot"></label>
          <input type="radio" name="r" id="r3" value="3" />
          <label for="r3" class="fa fa-mug-hot"></label>
          <input type="radio" name="r" id="r4" value="4" />
          <label for="r4" class="fa fa-mug-hot"></label>
          <input type="radio" name="r" id="r5" value="5" />
          <label for="r5" class="fa fa-mug-hot"></label>
        </div>
      </div>
    </div>
    <div class="col-md-12">
      <label for="review" class="form-label">Review</label>
      <textarea
        maxlength="100"
        class="form-control"
        id="myReview"
        name="review"
      ></textarea>
    </div>
    <div
      class="gy-3 py-3 my-3 text-center justify-content-around row row-cols-12"
    >
      <button
        type="submit"
        class="btn btn-lg btn-dark col-4 edit-review"
        data-id="{{myReview.id}}"
      >Update
      </button>
      <button
        id="delete-review"
        type="click"
        class="btn btn-lg btn-dark col-4"
        style="color:red; background-color:white"
        data-id="{{myReview.id}}"
      >Delete Review</button>

    </div>
  </form>
</div>

<script src="/js/editReview.js"></script>